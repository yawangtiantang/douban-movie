.post-container{
  display:flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom:40rpx;
  background-color: #fff;
  border-top:1px solid #ededed;
  border-bottom:1px solid #ededed;
}
.post-author-date{
  margin:10rpx 0 20rpx 10rpx;
}
.post-author{
  width:60rpx;
  height:60rpx;
  vertical-align: middle;
}
.post-date{
  vertical-align: middle;
  margin-left: 20rpx;
  margin-bottom:5px;
  font-size:26rpx;
}
.post-title{
  font-size:36rpx;
  margin-left: 10px;
  margin-bottom: 10px;
  color:#333;
  font-weight:600;
}
.post-image{
  width:100%;
  height:340rpx;
  margin-left: 15rpx;
  margin-bottom: 15rpx;
  margin:auto 0;
}
.post-content{
  color:#666;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
  font-size:28rpx;
}
.post-like{
  font-size:16rpx;
  flex-direction: row;
}
.post-like-image{
  width:16px;
  height:16px;
  margin-right: 8px;
  vertical-align: middle;
}
.post-like-font{
  vertical-align: middle;
  margin-right: 20rpx;
}